.baseline{ display: block; width: 100%; height: 20rpx; }
.nav-content{ display: flex; justify-content: space-between; align-items: center; margin: 0 auto; width: 100%; background: #fff; }
.nav-item{ display: block; width: 25%; height: 100%; text-align: center; }
.nav-item text{ display: inline-block; height: 75rpx; line-height: 75rpx; border-width: 5rpx; border-style: none none solid none; border-color: #fff; color: #333; }
.nav-item-active text{ border-color: #cd2b33; color: #cd2b33; }

.list-content{ display: block; margin: 0 auto; width:94.6%; overflow: auto; }
.article-item{ display: flex; justify-content: space-between; align-items: center; margin-bottom: 20rpx; padding: 20rpx; background: #fff; border-radius: 15rpx; overflow: hidden; }
.article-item:last-child{ margin-bottom: 0; }
.article-image{ display: block; width: 171rpx; height: 171rpx; border-radius: 15rpx; background: #ddd; }
.article-info{ display: flex; flex-direction: column; justify-content: space-between; align-items: flex-start; width: 445rpx;  height: 100%;  }
.aritcle-title{ display: block; font-size: 28rpx; color: #333; }
.article-msg{ display: flex; justify-content: space-between; align-items: center; width: 100%; }
.article-msg view:first-child image{ display: inline-block; vertical-align: middle; margin-right: 9rpx; width: 18rpx; height: 18rpx; }
.article-msg view:last-child image{ display: inline-block; vertical-align: middle; margin-right: 7rpx; width: 27rpx; height: 16rpx; }
.article-msg view text{ display: inline-block; vertical-align: middle; font-size: 20rpx; color: #949494; }