.head-banner{ display: block; width: 100%; height: 425rpx; }
.banner-list{ width: 100%; height: 100%; }
.banner-item{ display: block; position: relative; width: 100%; }
.banner-item image{ display: block; width: 100%; height: auto; }
@keyframes fadeIn {
  0%{ opacity: 0; }
  100%{ opacity: 1; }
}
.fade-in{
  animation: fadeIn 1s both;
}

.module-content{ display: flex; justify-content: space-between; align-content: center; flex-wrap: wrap; margin: 16rpx 0 0; padding: 47rpx 22rpx 49rpx; height: 140rpx; background: #fff; border-radius: 10rpx; }
.module-item{ width: 20%; }
.module-item image{ display: block; margin: 0 auto; width: 110rpx; height: 110rpx; overflow: hidden; }
.module-item text{ display: block; margin: 12rpx auto 0; text-align: center; font-size: 28rpx; color: #000; }

.show-content{ margin: 22rpx auto 0; width: 100%; background: #fff; }
.show-content:last-child{ margin-bottom: 10rpx; }
.show-list-content{ display: block; padding-bottom: 42rpx; width: 100%; }
.show-title{ display: block; padding: 22rpx 0 40rpx; text-align: center; }
.title1{ display: block; margin: 0 auto; width: 175.2rpx; height: 76.8rpx; }
.title2{ display: block; margin: 0 auto; width: 211.2rpx; height: 76.8rpx; }
.title3{ display: block; margin: 0 auto; width: 190.8rpx; height: 81.6rpx; }
.show-title-background{ display: block; position: absolute; left: 0; top: 0; z-index: 2; width: 100%; }
.show-title-name{ display: block; position: relative; z-index: 1; width: 100%; text-align: center; line-height: 74rpx; font-size: 30rpx; font-weight: bold; color: #cd2c31; }
.show-more-action{ display: flex; justify-content: space-between; align-items: center; position: absolute; right: 36rpx; top: 0; z-index: 3; }
.show-more-action text{ display: block; line-height: 74rpx; font-size: 28rpx; color: #5a5a5a; }

.show-audio-list{ display: block; position: relative; margin: 11rpx auto 0; padding: 0 21rpx; height: 170rpx; }
.show-audio-item{ display: block; position: relative; margin: 0 auto; }
.show-audio-item image{ display: block; margin: 0 auto; width: 215rpx; height: auto; }
.view-more-action{ display: block; text-align: center; }
.view-more-action text{ display: block; color: #000; font-size: 24rpx; }
.view-more-action text:last-child{ font-size: 16rpx; }

.show-article-list{ display: block; margin: 0 auto; width: 100%; }
.lastest-course-item{ display: flex; justify-content: space-between; align-items: center; margin: 0 auto 41rpx; width: 95%; }
.lastest-course-item:nth-child(2){ margin-bottom: 25rpx !important; }
.lastest-course-cover{ display: block; position: relative; margin-right: 17rpx; width: 242rpx; overflow: hidden; }
.lastest-course-cover image{ display: block; width: 100%; height: auto; border-radius: 5rpx; }
.lastest-course-info{ display: flex; flex-direction: column; justify-content: flex-start; align-items: flex-start; margin: 0 auto; width: 452rpx; height: 100%; }
.main-title,
.sub-title{ display: -webkit-box; margin: 0 auto; width: 100%; text-align: left; line-height: 1.2; font-size: 24rpx; color: #b1aeae; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden; }
.main-title{ margin: 5rpx auto 20rpx; width: 100%; text-align: left; font-size: 28rpx; color: #000; -webkit-line-clamp: 1; }
.sub-title{ max-height: 48rpx; }
.course-tutor{ display: inline-flex; justify-content: flex-start; align-items: center; margin-top: 15rpx; padding: 0 13rpx; height: 34rpx; text-align: center; line-height: 34rpx; background: #ffbe10; color: #fff; font-size: 20rpx; }
.course-tutor text{ display: block; margin-left: 7rpx; }
.check-more-operation{ display: block; text-align: center; line-height: 81rpx; border-top: .73rpx solid #bfbfbf; color: #bcbcbc; font-size: 28rpx; }

.show-article-info{ display: flex; justify-content: space-between; align-content: center; margin: 48rpx auto 20rpx; padding: 0 14rpx; }
.show-article-ground, .show-article-visit{ display: inline-block; font-size: 17rpx; color: #9c9c9c; }
.show-article-visit image{ margin-right: 9rpx; width: 27rpx; height: 16rpx; }

.tutor-group-list{ display: flex; justify-content: space-between; align-items: center; padding: 0 26rpx 58rpx; height: 150rpx; }
.tutor-group-item{ display: block; margin: 0 auto; width: 110rpx; text-align: center; }
.tutor-group-image{ position: relative; width: 110rpx; height: 110rpx; }
.tutor-group-image image{ display: block; margin: 0 auto; width: 100%; height: auto; border-radius: 100rpx; }
.tutor-group-name{ display: block; margin-bottom: 12rpx; }
.tutor-group-name text{ display: block; margin: 0 auto; font-size: 26rpx; color: #000; }