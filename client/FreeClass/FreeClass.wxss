page{ width: 100%; height: 100%; background: #fff; }

.registration-content{ display: block; width: 100%; height: 100%; }
.registration-item{ display: flex; justify-content: space-between; align-items: center; padding: 30rpx 13rpx; border-bottom: 1rpx solid #bfbfbf; }
.registration-item:last-child{ border-bottom: 0; }
.registration-cover{ display: block; margin-right: 14rpx; width: 240rpx; height: 142rpx; }
.registration-cover image{ display: block; width: 100%; height: 100%; background: #d2d2d2; }
.registration-info{ display: block; margin: 8rpx auto 0; width: 469rpx; }
.registration-info-title{ display: block; margin-bottom: 22rpx; color: #000; font-size: 28rpx; }
.registration-info-bottom{ display: flex; justify-content: space-between; align-items: center; }
.registration-info-bottom-left{ display: block; }
.registration-info-tutor{ display: block; margin-bottom: 10rpx; text-align: left; font-size: 24rpx; color: #6f6f6f; }
.registration-info-date{ display: block; font-size: 20rpx; color: #6f6f6f; }
.registration-operation{ display: block; margin-right: 37rpx; width: 103rpx; height: 57rpx; text-align: center; line-height: 57rpx; background: #ffbe10; border-radius: 15rpx; font-size: 30rpx; color: #fff; }