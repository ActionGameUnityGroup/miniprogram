.module-item{ display: flex; justify-content: flex-start; align-items: center; padding: 0 30rpx; height: calc(268rpx / 3); background: #fff; border-bottom: 1rpx solid #ddd; }
.module-item button{ display: block; border: 0; }
.module-item image{ display: block; margin-right: 30rpx; width: 46rpx; height: 38rpx; }
