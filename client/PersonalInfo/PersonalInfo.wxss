.personal-info-header{ display: block; margin-bottom: 20rpx; padding-top: 33rpx; width: 100%; height: 207rpx; background: #fff; }

.header-background{ display: block; position: absolute; left: 0; top: 0; z-index: 1; width: 100%; height: 100%; }
.header-background image{ display: block; width: 100%; height: 100%; }

.header-info{ display: block; width: 100%; height: 100%; }

.personal-info-avatar{ display: block; margin: 0 auto; width: 105rpx; height: 105rpx; border-radius: 50rpx; overflow: hidden; }
/*.personal-info-avatar open-data{ display: block; width: 100%; height: 100%; background: #ede9e9; }*/

.personal-info-name{ display: block; margin: 28rpx auto 0; text-align: center; color: #000; font-size: 28rpx; }
/* .personal-info-name text{ display: block; margin: 0 auto; width: 100%; text-align: center; color: #fff; font-size: 30rpx; } */

.personal-info-identify{ display: block; margin: 15rpx auto 0; min-width: 30rpx; text-align: center; color: #fff; font-size: 28rpx; }
/*.personal-info-identify open-data{ display: block; margin: 0 auto; width: 100%;  }*/

.header-action-content{ display: flex; justify-content: space-between; align-items: center; margin: 46rpx auto 0; width: 710rpx; background: #fff; border-radius: 15rpx; }
.header-action-item{ display: block; position: relative; margin: 30rpx 0; padding: 0; width: 354.5rpx; border: 0; background: transparent; }
.header-action-item::after{ border: 0; }
.header-action-item:last-child{ border-right: none; border-left: 1rpx solid #d6d6d6; }
/*.button-hover{}*/
.header-action-item image{ display: block; margin: 0 auto; }
.header-action-item text{ display: block; margin: 17rpx auto 0; text-align: center; font-size: 28rpx; color: #eb6000; }

