.module-item:nth-child(6),
.module-item:nth-child(9),
.module-item:nth-child(12){ border-bottom: 0; border-bottom-left-radius: 10rpx; border-bottom-right-radius: 10rpx; }

.module-item:nth-child(1),
.module-item:nth-child(4),
.module-item:nth-child(7),
.module-item:nth-child(10){ margin-top: 15rpx; border-top-left-radius: 10rpx; border-top-right-radius: 10rpx; }

.setting-action{ position: absolute; top: 30rpx; right: 40rpx; z-index: 999999; padding: 10rpx; width: 42rpx; }
.setting-action image{ display: block; width: 100%; }
