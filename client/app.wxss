page{ position: relative; top: 0; left: 0; margin: 0; padding: 0; width: 100%; height: 100%; background: #eee; overflow-y: auto !important; }
::-webkit-scrollbar{ width: 0; height: 0; }

.nav-bar{
  display: flex;
  justify-content: space-between;
  align-content: center;
  /* position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 9999999; */
  width: 100%;
  height: 8%;
  background: #fff;
  border-top: .3% solid #d9d9d9;
}
.nav-bar-item{ width: 33%; text-align: center; }
.nav-bar-item image{ display: block; margin: 11rpx auto 0; height: 50rpx; }
.nav-bar-item text{ display: block; margin: 10rpx auto 0; font-size: 20rpx; }

.empty-image{ display: block; width: 100%; height: 100%; overflow: hidden; }
.empty-image image{ display: block; width: 100%; }

.preload-image{ display: block; position: absolute; z-index: 1; width: 100%; height: 100%; background: #ddd; }
/*.preload-image image{ display: block; width: 100%; height: 100%; }*/
.truly-image{ display: block; position: relative; top: 0; left: 0; z-index: 2; width: 100%; height: 100%; }
.truly-image image{ display: block; width: 100%; height: 100%; }