page{ position: relative; top: 0; left: 0; margin: 0; padding: 0; width: 100%; height: 100%; background: #eee; overflow-y: auto !important; font-family: Microsoft Yahei; }
::-webkit-scrollbar{ width: 0; height: 0; }

.nav-bar{ display: flex; justify-content: space-between; align-content: center; width: 100%; height: 104rpx; background: #fff; }
.nav-bar-item{ width: calc(100% / 3); height: 104rpx; text-align: center; }
.nav-bar-item image{ display: block; margin: 10rpx auto 0; height: 48rpx; }
.nav-bar-item text{ display: block; margin: 5rpx auto 0; font-size: 26rpx; }

.empty-image{ display: block; width: 100%; height: 100%; overflow: hidden; }
.empty-image image{ display: block; width: 100%; }

.preload-image{ display: block; position: absolute; z-index: 1; width: 100%; height: 100%; background: #ddd; }
/*.preload-image image{ display: block; width: 100%; height: 100%; }*/
.truly-image{ display: block; position: relative; top: 0; left: 0; z-index: 2; width: 100%; height: 100%; }
.truly-image image{ display: block; width: 100%; height: 100%; }

::-webkit-scrollbar{ width: 0; height: 0; }