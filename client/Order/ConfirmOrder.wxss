page {
  width: 100%;
  height: 100%;
}

.bg {
  display: flex;
  flex-direction: column;
  background: #F5F5F5;
  width: 100%;
  height: 100%;
}

.address-view {
  display: flex;
  flex-direction: row;
  align-items: center;

  background: white;
  margin: 12rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.address-view-image {
  height: 30rpx;
  width: 20rpx;
  margin-left: 17rpx;
  background:  gray;
  margin-top: 39rpx;
  margin-bottom: 39rpx;
}

.address-view-text {
  margin-left: 19rpx;
  font-size: 28rpx;
}

.goods-view {
  display: flex;
  flex-direction: row;
  
  border-radius: 10rpx;
  background: white;
  margin: 12rpx;
  margin-top: 0rpx;
  height: 202rpx;
  margin-bottom: 0rpx;
}

.goods-view-image {
  width: 160rpx;
  height: 140rpx;
  background: gray;
  margin-top: 35rpx;
  margin-left: 25rpx;
  margin-bottom: 35rpx;
}

.goods-view-content {
  display: flex;
  flex-direction: column;

  margin-left: 24rpx;
  margin-top: 31rpx;
}

.goods-view-title {
  font-size: 30rpx;
}

.goods-view-bottom {
  display: flex;
  flex-direction: row;  
  align-content: center;
  justify-content: space-between;

  margin-top: 65rpx;
  width: 500rpx;
}

.goods-view-price-title {
  font-size: 24rpx;
  color: #8e8e8e;
}

.goods-view-price-symbol {
  font-size: 24rpx;
  color: red;  
  margin-left: 20rpx;
}

.goods-view-price {
  font-size: 30rpx;
  color: red;
}

.goods-number {
  font-size: 24rpx;
}

.credits-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  background: white; 
  border-radius: 10rpx;
  margin: 12rpx;
  margin-top: 25rpx;
  margin-bottom: 0rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.credits-info {
  margin-top: 33rpx;
  margin-bottom: 33rpx;
}

.credits-title {
  font-size: 24rpx;
}

.credits-instruction {
  font-size: 24rpx;
  margin-left: 50rpx;
  color: #cf282f;
}

.price-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
  background: white;
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  align-items: center;
  padding-top: 33rpx;
  padding-bottom: 33rpx;
  margin-top: 2rpx;
}

.price-view-number {
  color: #cf282f;
  font-size: 30rpx;
}

.freight-view {
  display: flex;
  justify-content: space-between;

  background: white;
  margin-top: 2rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 33rpx;
  padding-bottom: 33rpx;
}

.freight-number {
  font-size:30rpx;
  color:#cf282f;
}
