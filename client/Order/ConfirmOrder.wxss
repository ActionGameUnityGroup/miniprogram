  display: flex;
  flex-direction: column;

  margin-left: 24rpx;
  margin-top: 31rpx;
}

.goods-view-title {
  font-size: 30rpx;
}

.goods-view-botton {
  display: flex;
  flex-direction: row;

  margin-top: 65rpx;
}

.goods-view-price-title {
  font-size: 24rpx;
  color: #8e8e8e;
}

.goods-view-price-symbol {
  font-size: 24rpx;
  color: red;  
  margin-left: 20rpx;
}

.goods-view-price {
  font-size: 30rpx;
