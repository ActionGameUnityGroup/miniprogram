page {
  width: 100%;
  height: 100%;
}

.bg {
  display: flex;
  flex-direction: column;
  background: #F5F5F5;
  width: 100%;
  height: 100%;
}

.address-view {
  display: flex;
  flex-direction: row;
  align-items: center;

  background: white;
  margin: 12rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.address-view-image {
  height: 30rpx;
  width: 20rpx;
  margin-left: 17rpx;
  background:  gray;
  margin-top: 39rpx;
  margin-bottom: 39rpx;
}

.address-view-text {
  margin-left: 19rpx;
  font-size: 28rpx;
}

.goods-view {
  display: flex;
  flex-direction: row;
  
  border-radius: 10rpx;
  background: white;
  margin: 12rpx;
  margin-top: 0rpx;
  height: 202rpx;
}

.goods-view-image {
  width: 160rpx;
  height: 140rpx;
  background: gray;
  margin-top: 35rpx;
  margin-left: 25rpx;
  margin-bottom: 35rpx;
}

