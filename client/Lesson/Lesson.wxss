.top-content{ padding-bottom: 45rpx; background: #fff; }
.audio-cover{ margin: 0 auto; padding: 62rpx 0 48rpx; width: 364rpx; }
.audio-cover image{ display: block; width: 100%; height: 480rpx; background: #f00; border-radius: 15rpx; }
.audio-name{ display: block; width: 100%; text-align: center; }
.audio-name text{ font-size: 30rpx; }

.audio-action-bar{ display: block; padding: 0 51rpx; margin-top: 54rpx; text-align: right; }
.audio-action{ display: inline-block; margin-left: 38rpx; }
.audio-action image{ display: block; }

.audio-control-bar{ display: flex; justify-content: space-between; align-items: center; margin: 0; padding: 0 198rpx; }
.pre-action, .next-action{ display: block; padding: 15rpx; width: 32rpx; height: 36rpx; }
.play-action, .pause-action{ display: block; width: 119rpx; height: 119rpx; }
.pre-action image, .next-action image, .play-action image, .pause-action image{ display: block; width: 100%; height: 100%; }

.bottom-content{ display: block; margin: 18rpx auto 0; padding-bottom: 15rpx; background: #fff; }
.collection-top{ display: flex; justify-content: space-between; align-items: center; padding: 0 26rpx; height: 155rpx; border-bottom: 1rpx solid #ddd; }
.collection-info{ display: flex; justify-content: space-between; align-items: center; }
.collection-cover{ display: block; margin-right: 20rpx; width: 78rpx; height: 78rpx; }
.collection-msg text{ display: block; }
.collection-msg text:first-child{ font-size: 30rpx; }
.collection-msg text{ margin-top: 13rpx; font-size: 20rpx; }

.subscribe-collection-action{ display: block; padding: 10rpx 20rpx; font-size: 30rpx; color: #fff; background: linear-gradient(225deg, #fe8a0c, #fe6c14); border-radius: 10rem; }

.collection-bottom{  }

.collection-title{ display: block; margin-top: 35rpx; padding: 0 51rpx; text-align: left; }
.collection-title text{ display: inline-block; vertical-align: middle;  }
.collection-title text:first-child{ margin-right: 10rpx; }
.collection-explain{ display: block; margin-top: 56rpx; padding: 0 31rpx; text-align: left; overflow: auto; }