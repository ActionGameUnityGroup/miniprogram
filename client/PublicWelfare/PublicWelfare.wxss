page { width: 100%; height: 100%; background: #fff; }

/*.activity-list{ display: block; padding: 0 30rpx; background: #fff; }*/

.space {
  height: 13rpx;
  width: 100%;
  background: #F5F5F5;
}

.activity-item { display: flex; justify-content: space-between; align-items: center; margin: 0 auto; padding: 0 30rpx; height: 204rpx; }

.activity-image{ display: block; position: relative; width: 225rpx; height: 150rpx; overflow: hidden; }

.activity-info{ display: flex; flex-direction: column; justify-content: space-between; align-items: center; width: 430rpx; height: 150rpx; }
.activity-title{ display: block; width: 100%; max-height: 80rpx; text-align: left; color: #333; font-size: 30rpx; overflow: hidden; }
.activity-msg{ display: flex; justify-content: space-between; align-items: center; width: 100%; }

.activity-detail{ display: inline-flex; justify-content: space-between; align-items: center; vertical-align: middle; font-size: 24rpx; color: #252525; }

.activity-date, .activity-time{ margin-right: 10rpx; color: #6a6a6a; }

.activity-type{
  display: block;
  width: 112rpx;
  height: 46rpx;
  text-align: center;
  line-height: 46rpx;
  background: -webkit-linear-gradient(0deg, #ff9a9d, #fe5baf);
  border-radius: 50rpx;
  color: #fff;
  font-size: 24rpx;
}

.online { color: #6a6a6a; }

.line{ display: block; margin: 0 30rpx; height: 2rpx; background: #e6e6e6; }

.disable{ background: #b0b0b0 !important; }