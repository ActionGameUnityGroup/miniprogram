.space {
  height: 13rpx;
  width: 100%;
  background: #F5F5F5;
}

.scroll-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  height: 204rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.action-image {
  display: block;
  width: 150rpx;
  height: 150rpx;
  /* margin-left: 30rpx;
  margin-right: 23rpx;
