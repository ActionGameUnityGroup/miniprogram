  overflow: hidden;
}

.action-image image {
  display: block;
  /*width: 100%;*/
}

.right-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 500rpx;
  height: 60%;
}

.action-title {
  width: 100%;
  text-align: left;
  color: #252525;
  /*margin-top: 34rpx;*/
}

.action-right-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  text-align: left;
}

.course-info{
  width: 70%;
}

.action-date{
  margin-right: 10rpx;
  color: #6a6a6a;
}

.type-image{
  width: 85rpx;
  /*height: */
  text-align: center; line-height: 50rpx;
  border: 1px solid #f00;
  border-radius: 10rpx;
}

 .type-image text{
  display: block;
  font-size: 12px;
  color: #f00;
} 

.online {
