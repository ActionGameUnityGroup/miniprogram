.inivitation-list{ display: block; margin: 16rpx auto 0; border-radius: 15rpx; overflow: hidden; }
.inivitation-item{ display: flex; justify-content: flex-start; align-items: center; margin: 0 auto; padding: 0 35rpx; width: 624rpx; height: 135rpx; line-height: 135rpx; background: #fff; border-bottom: 1rpx solid #7f7f7f; }
.inivitation-item:last-child{ border-bottom: 0; }
.user-avatar{ display: block; margin-right: 26rpx; width: 83rpx; height: 83rpx; border-radius: 50rpx; background: rgba(0, 0, 0, .5); }
.user-info{ display: flex; flex-direction: column; justify-content: space-between; align-items: flex-start; height: 83rpx; }
.course-name{ display: block; line-height: 1.5; font-size: 26rpx; color: #121212; }
.inivitation-time{ display: block; line-height: 1.5; font-size: 24rpx; color: #7f7f7f; }