page {
  width: 100%;
  height: 100%;
}
.bg {
  background: #F5F5F5;
  padding: 20rpx;
  height: 100%;
}
.container {
  border-radius: 10rpx;
  background: white;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top: 36rpx;
  padding-bottom: 36rpx;
  margin-left: 21rpx;
  margin-right: 21rpx;
}

.time-picke {
  display: flex;
  flex-direction: row;
}

.birthday-text {
  /* margin-right: 50rpx; */
}

.arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  /* position: absolute; */
  transform: rotate(45deg);
  /* right: 20px; */
}

.line {
  background: #DCDCDC;
  margin-left: 5rpx;
  margin-right: 5rpx;
  height: 2rpx;
}

.confirm-btn {
  background: #fd6857;
  color: #fff;
  border-radius: 100rpx;
}
.input {
  text-align: right;
}

.image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background: gray;
}

.navigator {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-right: 21rpx;
}

.space {
  height: 45rpx;
  color: #F5F5F5;
}
