<view class='content'>
  <swiper class='headImage' indicator-dots="True" indicator-active-color="#0000ff">
  <block wx:for="{{memberData.memberImage}}" wx:key="item" wx:for-index="index">
    <swiper-item>
      <image class='swiper-image' mode="aspectFill" src='{{item}}'></image>
    </swiper-item>
  </block>
  </swiper>

  <view class='swiper-tap'>
    <view class="swiper-tab-list {{memberData.currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">
      详情
      <!-- <view class='on' wx:if="{{memberData.currentTab==0}}">
      </view>  -->
      </view>
    <view class="swiper-tab-list {{memberData.currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">机制</view>
    <view class="swiper-tab-list {{memberData.currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">福利</view>
  </view>
</view>
