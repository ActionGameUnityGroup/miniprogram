/* UserCenter/Address.wxss */
page{width: 100%; height: 100%;}
.bg {
  background: #F5F5F5;
  height: 100%;
  padding: 20rpx;
}

.add-new-btn {
  display: flex;
  justify-content: center;
  position: fixed;
  width: 100%;
  bottom: 0;
}

.btn-add-img {
  width: 30rpx;
  height: 30rpx;
}

.scroll-view {
  padding: 20rpx;
  background: white;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}

.edit-btn {
  width: 100rpx;
  height: 60rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
}

.scroll-item {
  display: flex;
  flex-direction: row;
}







/*check box setting*/
/*unchecked*/
checkbox .wx-checkbox-input{
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}

/*checked backgroud*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  border: none;
  background: #FA8072;
}

/*checked tick*/
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: 40rpx;
  font-size: 30rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
