page
{
  width: 100%;
  height: 100%;
}

.headImage
{
  background: gray;
  height: 289rpx;
}

.info-view
{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.info-score
{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-score-number
{
  color: #cd2a2e;
  font-size: 38rpx;
  margin-top: 46rpx;
}

.info-score-image
{
  width: 50rpx;
  height: 50rpx;
  margin-top: 46rpx;
  background: gray;
}

.info-score-text
{
  margin-top: 19rpx;
  font-size: 30rpx;
  margin-bottom: 52rpx;
}

.blank-view
{
  width:100%; 
  height:19rpx; 
  background:#f5f5f5;
}

.bottom-title
{
  display: flex;
  height: 91rpx;
  width: 100%;
  flex-direction: row;
  align-items: center;
}

.book-view
{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.book-item
{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  justify-content: space-around;

  margin-left: 30rpx;
  margin-right: 30rpx;
}

.book-image
{
  margin-top: 33rpx;
  width: 130rpx;
  height: 180rpx;
  background: gray;
}

.book-title
{
  color: #131313;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.book-price
{
  color: #cf282f;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}