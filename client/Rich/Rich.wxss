page{ width: 100%; height: 100%; overflow: auto; background: #fff; }
.tab-bar{ display: flex; justify-content: space-between; align-items: center; padding: 38rpx 72rpx 0; background: #fff; }
.tab-item{ display: block; padding-bottom: 19rpx; border-bottom: 4rpx solid transparent; font-size: 30rpx; color: #000; }
.tab-item-active{ border-color: #f86442; color: #f86442; }
.shemer-content{ display: block; margin-top: 22rpx; width: 100%; height: 100%; }
.shemer-item{ display: flex; justify-content: space-between; align-items: center; padding: 30rpx 15rpx; border-bottom: 1rpx solid #d0d0d0; }
.shemer-item:last-child{ border: 0; }
.shemer-cover{ display: block; position: relative; margin-right: 14rpx; width: 240rpx; }
.shemer-cover image{ display: block; width: 100%; height: auto; }
.shemer-info{ display: block; width: 469rpx; }
.shemer-title{ display: -webkit-box; margin-bottom: 18rpx; width: 100%; text-align: left; line-height: 1.2; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden; font-size: 28rpx; color: #000; }
.shemer-describe{ display: -webkit-box; width: 100%; line-height: 1.2; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden; font-size: 24rpx; color: #6f6f6f; }
.shemer-label{ display: inline-flex; justify-content: flex-start; align-items: center; padding: 0 10rpx; height: 33rpx; background: #ffbe10; color: #fff; font-size: 20rpx; }
.label-item{ display: block; margin-left: 8rpx; }