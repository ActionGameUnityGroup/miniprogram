page{ width: 100%; height: 100%; background: #fff; }

.registration-content{ display: block; width: 100%; }
.registration-item{ display: flex; justify-content: space-between; align-items: center; padding: 30rpx 13rpx; border-bottom: 1rpx solid #bfbfbf; }
.registration-item:last-child{ border-bottom: 0; }
.registration-cover{ display: block; position: relative; margin-right: 14rpx; }
.registration-cover image{ display: block; width: 240rpx; height: 142rpx; background: #d2d2d2; }
.registration-info{ display: block; width: 469rpx; }
.registration-info-title{ display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden; margin-bottom: 20rpx; color: #000; font-size: 28rpx; }
.registration-info-bottom{ display: flex; justify-content: space-between; align-items: center; }
.registration-info-bottom-left{ display: block; }
.registration-info-tutor, .registration-info-date{ display: flex; justify-content: flex-start; align-items: center; text-align: left; font-size: 24rpx; color: #6f6f6f; }
.registration-info-tutor{ margin-bottom: 26rpx; }
.registration-info-tutor text{ display: block; margin-left: 10rpx; }
.registration-operation{ display: block; margin-right: 37rpx; width: 103rpx; height: 57rpx; text-align: center; line-height: 57rpx; background: #ffbe10; border-radius: 15rpx; font-size: 30rpx; color: #fff; }