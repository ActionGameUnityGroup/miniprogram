Page{ width: 100%; height: 100%; overflow: auto; background: #fff; }
image{ display: block; width: 100%; height: 100%; }
.course-detail-content{ display: block; width: 100%; height: 100%; }
.course-detail-item{ display: flex; justify-content: space-between; align-items: center; padding: 30rpx 13rpx; border-bottom: 1rpx solid #d0d0d0; }
.course-detail-item:last-child{ border: 0; }
.course-detail-cover{ display: block; margin-right: 14rpx; width: 240rpx; height: 143rpx; background: #ddd; }
.course-detail-info{ display: block; width: 469rpx; }
.course-detail-title{ display: block; margin-bottom: 18rpx; width: 383rpx; text-align: left; line-height: 1.2; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden; font-size: 28rpx; color: #000; }
.course-detail-describe{ display: block; width: 383rpx; line-height: 1; -webkit-box-orient: vertical; -webkit-line-clamp: 2; overflow: hidden; font-size: 24rpx; color: #6f6f6f; }
.course-detail-label{ display: inline-block; padding: 0 10rpx; line-height: 33rpx; background: #ffbe10; color: #fff; font-size: 20rpx; }