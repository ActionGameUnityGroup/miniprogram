page{ width: 100%; height: 100%; background: #f5f5f5; }
.syllabus-content{ display: block; padding: 0 30rpx; width: auto; }
.scroll-view{ display: block; position: relative; margin: 0 auto 42rpx; width: 100%; border-radius: 15rpx; overflow: hidden; }
.scroll-view-cover{ display: block; position: relative; z-index: 1; width: 100%; }
.scroll-view image{ display: block; width: 100%; height: auto; }
.scroll-view-info{ display: block; width: 100%; background: #fff; }
.scroll-view-info-top{ display: flex; justify-content: flex-start; align-items: flex-start; padding: 22rpx 0; }
.scroll-view-info-bottom{ display: flex; justify-content: space-between; align-items: flex-start; padding: 0 28rpx 24rpx; }
.scroll-view-info-label{ display: block; width: 196rpx; height: auto; }
.scroll-view-info-title{ display: block; width: calc(100% - 196rpx); text-align: justify; line-height: 48rpx; font-size: 30rpx; font-weight: bold; color: #010101; }
.scroll-view-info-msg{ display: flex; justify-content: flex-start; align-items: center; }
.info-msg-location,
.scroll-view-info-msg text,
.info-msg-author-content{ margin-right: 8rpx; font-size: 26rpx; color: #000000; }
.info-msg-location-icon{ margin-right: 8rpx; width: 22rpx; }
.info-msg-author-content{ display: flex; justify-content: space-between; align-items: center; }
.scroll-view-price{ font-size: 26rpx; color: #000; }

.date-view{ display: flex; flex-direction: row;/* align-content: center; */ align-items: center; margin-top: 35rpx; }

.remain-text
{
  background: #f25c75;
  font-size: 18rpx;
  color: white;
  border-radius: 10rpx;
  margin-right: 12rpx;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
}

.date-text{ font-size: 24rpx; }

.content-view{ display: flex; flex-direction: row; margin-top: 17rpx; padding-left: 19rpx; background: #f5f4f4; }

.mainIcon{ width: 220rpx; height: 123.75rpx; background: gray; margin-top: 22rpx; margin-bottom: 22rpx; }

.right-content{ display: flex; flex-direction: column; padding-left: 19rpx; margin-top: 22rpx; margin-bottom: 22rpx; }