.new-address-content{ margin: 7rpx auto 0; padding: 0 12rpx; border-radius: 5rpx; overflow: hidden; }
.address-item{ display: flex; justify-content: space-between; align-items: center; padding: 0 12rpx; height: 86rpx; background: #fff; border-bottom: 1rpx solid #848484; }
.address-item:last-child{ border-bottom: none; }
.address-item text{ font-size: 26rpx; color: #181818; }
.address-item input{ width: 80%; font-size: 26rpx; color: #181818; }
.address-item picker{ width: 80%; }
.picker-empty{ display: flex; justify-content: space-between; align-items: center; width: 95%; }
.picker-empty text{ font-size: 27rpx; color: #181818; }
.picker-empty image{ display: block; width: 13rpx; height: 25rpx; }
.picker{ width: 100%; font-size: 26rpx; color: #181818; }

.set-default-action{ display: flex; justify-content: center; align-items: center; margin: 44rpx auto 0; width: 100%; }
.set-default-action image{ display: block; margin-right: 10rpx; width: 38rpx; height: 38rpx; }
.set-default-action text{ font-size: 27rpx; color: #181818; }

.save-action{ margin: 127rpx auto 0; padding: 0 22rpx; }
.save-btn{ width: 100%; height: 88rpx; text-align: center; line-height: 88rpx; background: #fd6857; color: #fff; border-radius: 50rpx; }