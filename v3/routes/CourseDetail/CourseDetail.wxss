.course-series-content{ display: block; margin: 0 auto; width: 100%; height: 100%; }
.course-series-header{ display: block; width: 100%; background: #fff; }
.course-series-cover{ display: block; width: 100%; }
.course-series-cover image{ display: block; width: 100%; height: auto; }
.course-series-info{ display: block; padding: 34rpx 55rpx 35rpx 34rpx; }
.course-series-title{ display: flex; justify-content: space-between; align-items: center; }
.course-series-title text{ display: block; font-size: 32rpx; font-weight: 500; color: #000000FF; }
.course-series-msg{ display: block; margin-top: 21rpx; font-size: 24rpx; color: #5D5D5DFF; }

.share{ display: block; width: 36rpx; height: 36rpx; }
.share image{ display: block; width: 100%; height: auto; }

.intro-title{ display: block; margin-top: 15rpx; padding: 0 35rpx; line-height: 70rpx; border-bottom: 1rpx solid #BFBFBFFF; background: #fff; font-size: 30rpx; color: #000000FF; }
.intro-list{ display: block; padding: 20rpx 34rpx; }
.course-series-item{ display: block; margin: 0 auto; width: 682rpx; }
.course-series-item image{ display: block; width: 100%; height: auto; }

.share-shadow{ display: block; position: fixed; top: 0; left: 0; z-index: 1; width: 100%; height: 100%; }
.share-bar{ display: block; position: fixed; bottom: -100%; left: 0; z-index: 3; width: 100%; transition: bottom .5s; }
.show{ bottom: 0; }
.share-content{ display: block; margin: 0 auto 9rpx; width: 730rpx; background: #fff; border-radius: 10rpx; box-shadow: 0 0 21rpx 0 #00000087; }
.share-title{ display: block; padding-top: 27rpx; text-align: center; line-height: 48rpx; font-size: 32rpx; font-weight: 500; color: #0F0F0FFF; }
.share-target-list{ display: flex; justify-content: space-between; align-items: center; padding: 12rpx 158rpx 59rpx; }
.share-target-item{ display: block; margin: 0; padding: 0; width: 128rpx; background: transparent; }
.share-target-item::before{ border: 0; }
.share-target-item::after{ border: 0; }
.target-icon{ display: block; width: 128rpx; }
.target-icon image{ display: block; width: 100%; }
.target-name{ display: block; margin-top: 17rpx; width: 100%; text-align: center; line-height: 48rpx; font-size: 28rpx; font-weight: 500; color: #878787FF; }
.cancel-share{ display: block; margin: 0 auto 13rpx; width: 730rpx; height: 92rpx; text-align: center; line-height: 92rpx; background: #fff; border-radius: 10rpx; font-size: 32rpx; font-weight: 500; color: #575757FF; box-shadow: 0 0 21rpx 0 #00000087; }

.empty{ display: block; height: 100%; text-align: center; line-height: 10; font-size: 24px; }