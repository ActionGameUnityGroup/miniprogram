Page{ background: #e1e1e1; }

.video-list{ display: block; width: 100%; height: 100%; }
.video-item{ display: block; margin-top: 12rpx; width: 100%; background: #fff; }
.video-item:last-child{ margin-bottom: 50rpx; }
.video-title{ display: block; padding: 0 30rpx; text-align: left; line-height: 112rpx; font-size: 30rpx; font-weight: bold; color: #101010; }
.video-bar{ display: block; position: relative; width: 100%; height: 416rpx; }

.video-content{ display: block; position: relative; z-index: 1; width: 100%; height: 416rpx; }
.video-player{ display: block; position: relative; top: 0; left: 0; z-index: 1; width: 100%; height: 100%; }
.video-poster{ display: block; position: relative; width: 100%; height: 100%; }
.poster-shadow{ display: block; position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, .4); }
.video-poster image{ display: block; width: 100%; height: auto; }
.video-control-bar{ display: flex; justify-content: space-between; align-items: center; position: absolute; bottom: 0; left: 0; z-index: 999; width: 100%; height: 60rpx; background: rgba(0, 0, 0, .3); }
.pause-btn,
.play-btn{ display: block; padding: 10rpx; width: 40rpx; height: 40rpx; }
.pause-btn image,
.play-btn image{ display: block; width: 100%; height: auto; }
.video-slider{ display: block; width: 500rpx; }
.video-current-time{ display: block; padding-left: 10rpx; color: #fff; font-size: 28rpx; }
.video-max-length{ display: block; padding-right: 10rpx; color: #fff; font-size: 28rpx; }