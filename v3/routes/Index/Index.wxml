    <block wx:if='{{videoList.length === 0}}'>
      <view class='video-bar'><image mode='widthFix' src='/assets/icon/video.png' /></view>
    </block>
    <block wx:else>
      <swiper
        class="video-bar"
        current='{{currentVideo}}'
        bindchange='changeCurrent'
        autoplay='{{autoplay}}'
        circular='{{true}}'
        indicator-dots='{{true}}'
        indicator-color='rgba(146, 146, 146, 1)'
        indicator-active-color='#ffffff'
      >
        <block wx:for='{{videoList}}' wx:key='index'>
          <swiper-item item-id='{{index}}'>
            <block wx:if='{{!videoPlayList["video" + (index + 1)]}}'>
              <view style='width: 100%;' bindtap='playVideo' data-key='{{index + 1}}'>
                <image mode='widthFix' src='{{item.poster}}' style='width: 100%;' />
              </view>
            </block>
            <video
              id='video{{index + 1}}'
              src="{{item.url}}"
              controls='{{false}}'
              object-fit='cover'
              autoplay='{{false}}'
              class='video-content'
              show-fullscreen-btn='{{false}}'
              bindpause='pauseVideo'
              bindended='videoEnd'
            />
          </swiper-item>
        </block>
      </swiper>
    </block>

  </view>

  <view class="show-content ff-background">
    <view class="show-title"><text>常驻导师</text></view>
    <swiper class="tutor-list" display-multiple-items='{{3}}'>
      <block wx:for='{{residentTutorList}}' wx:key='index'>
        <block wx:if='{{item.tutorId === ""}}'>
          <swiper-item>
            <view class="tutor-item">
              <view class="tutor-image"><image mode='widthFix' src='{{item.avatar}}'/></view>
              <view class="tutor-name font-bold"><text> {{item.name}} </text></view>
              <view class="tutor-title">{{ item.title[0] }}</view>
            </view>
          </swiper-item>
        </block>
        <block wx:else>
          <swiper-item>
            <view data-route='/routes/TutorIntroduction/TutorIntroduction?tutorId={{item.tutorId}}' class="tutor-item" bindtap='navigateAction'>
              <view class="tutor-image"><image mode='widthFix' src='{{item.avatar}}'/></view>
              <view class="tutor-name font-bold"><text> {{item.name}} </text></view>
              <view class="tutor-title">{{ item.title[0] }}</view>
            </view>
          </swiper-item>
        </block>
      </block>
    </swiper>
  </view>

