  <view class="show-content ff-background rich-show-content">
    <view class="show-title">
      <text>常道•丰盛系列</text>
      <view class="show-all" bindtap='navigateAction' data-route='/routes/RichSeries/RichSeries'>查看全部 ></view>
    </view>
    <view class="rich-content-series">
      <view class="series-cover"><image mode='widthFix' src='/assets/icon/rich-series-cover.jpg' /></view>
      <view class="series-info">
        <view class="series-info-title">丰盛系列</view>
        <view class="series-info-describe">这是一条迈向丰盛，最终拥抱丰盛的道路，我们在这里等你</view>
      </view>
    </view>
  </view>

  <view class="show-content ff-background">
    <view class="show-title">
      <text>课程风采</text>
      <view class="show-all" bindtap='navigateAction' data-route='/routes/CourseFeature/CourseFeature'>查看全部 ></view>
    </view>
    <view class="course-feature-content">
      <block wx:for='{{courseFeatureList}}' wx:key='index'>
        <view class="course-feature-item" bindtap='navigateAction' data-route='/routes/CourseFeatureDetail/CourseFeatureDetail?courseFeatureId={{item.featureId}}'>
          <view class="course-feature-cover"><image mode='scaleToFill' src='{{item.cover}}' /></view>
          <view class="course-feature-info">
            <view class="course-feature-info-title">{{item.title}}</view>
            <view class="course-feature-info-msg">{{item.subTitle}}</view>
          </view>
        </view>
      </block>
    </view>
  </view>

  <view class="show-content ff-background marin-bottom-x">
    <view class="show-title">
      <text>助教团</text>
      <view class="show-all" bindtap='navigateAction' data-route='/routes/AssistantGroup/AssistantGroup'>了解详情 ></view>
    </view>
    <swiper class="tutor-list" display-multiple-items='{{3}}'>
      <block wx:for='{{assistantList}}' wx:key='index'>
        <swiper-item>
          <view class="tutor-item" bindtap='navigateAction' data-route='/routes/AssistantIntroduction/AssistantIntroduction?assistantId={{item.assistantId}}'>
            <view class="tutor-image"><image mode='widthFix' src='{{item.avatar}}'/></view>
            <view class="tutor-title font-bold">常道助教</view>
            <view class="tutor-name"><text> {{item.name}} </text></view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
