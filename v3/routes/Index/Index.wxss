page{ font-family: PingFangSC-Medium; }
.scroll-view{ display: block; height: calc(100% - 102rpx); overflow-y: auto; }
.header{ margin-top: 12rpx; width: 100%; background: #fff; }
.header-background{ position: relative; width: 100%; height: 615rpx; }
.header-background image{ display: block; width: 100%; height: auto; }
.search-bar{ display: block; margin: 0 auto; width: 616rpx; height: 58rpx; background: #F8F8F8; border-radius: 30rpx; }
.search-bar-icon{ display: inline-block; vertical-align: middle; margin-right: 16rpx; width: 30rpx; height: 30rpx; }
.search-bar-placeholder{ display: inline-block; vertical-align: middle; font-size: 24rpx; color: #D2D2D2; }

.video-bar{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  width: 700rpx;
  height: 393rpx;
  text-align: center;
  box-shadow: 3rpx 0 18rpx rgba(0, 0, 0, .05);
}
.video-icon{ display: block; margin: 0 auto; width: 115rpx; height: 115rpx; }
.video-content{ width: 100%; height: 100%; }

.show-content{ margin: 19rpx auto 0; width: 100%; background: #fff; }
.show-title{ display: flex; justify-content: space-between; align-items: center; padding: 42rpx 46rpx 34rpx; }
.show-title text{ display: block; position: relative; font-size: 32rpx; font-weight: bold; color: #000; }
.show-title text::before{ display: block; content: ''; position: absolute; left: -23rpx; top: 0; width: 13rpx; height: 39rpx; background: linear-gradient(0deg, rgba(255, 175, 80, 1) 0%, rgba(255, 223, 121, 1) 100%); border-radius: 7px; }
.show-all{ display: block; position: relative; color: #697AA0; font-size: 24rpx; font-weight: bold; }
.tutor-list{ height: 362rpx; }
.contributing-tutor-list{ height: 305rpx; }
.tutor-item{ display: block; margin: 10rpx auto 0; padding: 40rpx 0 30rpx; width: 203rpx; text-align: center; box-shadow: 0 0 16rpx 0 rgba(36, 37, 37, .17); border-radius: 15rpx; }
.tutor-item-sec{ display: block; margin: 10rpx auto 0; padding: 41rpx 0 21rpx; width: 203rpx; text-align: center; box-shadow: 0 0 25rpx #2425252B; border-radius: 15rpx; }
.tutor-image{ position: relative; margin: 0 auto; width: 156rpx; height: 156rpx; background: #BFBFBFFF; border-radius: 100rpx; overflow: hidden; }
.tutor-image image{ display: block; margin: 0 auto; width: 100%; height: 100%; }
.tutor-type{ margin-top: 18rpx; font-size: 28rpx; font-weight: bold; color: #000; }
.tutor-name{ margin-top: 12rpx; font-size: 28rpx; color: #000; }
.tutor-title{ margin-top: 15rpx; font-size: 20rpx; color: #9A9898FF; }

.rich-content-series{ display: block; margin: 10rpx auto 0; width: 684rpx; box-shadow: 0 0 25rpx #2425252B; border-radius: 15rpx; overflow: hidden; }
.rich-show-content{ padding-bottom: 45rpx; }
.series-cover{ display: block; width: 100%; }
.series-cover image{ display: block; width: 100%; background: #f00; }
.series-info{ display: block; padding: 28rpx 30rpx 33rpx; background: #fff; }
.series-info-title{ display: block; font-size: 32rpx; font-weight: bold; color: #000; }
.series-info-describe{ display: block; margin-top: 21rpx; font-size: 24rpx; color: #5D5D5D; }

.course-feature-content{ display: block; margin: 0 auto; width: 682rpx; }
.course-feature-item{ display: flex; justify-content: space-between; align-items: center; padding: 32rpx 0; width: 100%; border-bottom: 1rpx solid #BFBFBF; }
.course-feature-item:last-child{ border-bottom: 0; }
.course-feature-cover{ display: block; width: 203rpx; height: 154rpx; border-radius: 15rpx; overflow: hidden; }
.course-feature-cover image{ display: block; width: 100%; height: 100%; background: #BFBFBF; }
.course-feature-info{ display: block; width: 456rpx; height: 154rpx; }
.course-feature-info-title{ display: block; margin-bottom: 21rpx; font-size: 28rpx; color: #000; text-overflow: ellipsis; white-space: nowrap; overflow: hidden; }
.course-feature-info-msg{ display: block; line-height: 1.3; font-size: 24rpx; color: #5D5D5D; }

.marin-bottom-x{ margin-bottom: 10rpx; }
.font-bold{ font-weight: bold; }