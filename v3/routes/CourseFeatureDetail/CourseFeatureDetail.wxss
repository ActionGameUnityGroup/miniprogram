.course-feature-title{ display: block; margin-bottom: 20rpx; padding: 0 33rpx; line-height: 48rpx; font-size: 32rpx; font-weight: bold; color: #000000FF; }
.info-bar{ display: flex; justify-content: space-between; align-items: center; margin-bottom: 40rpx; padding: 0 33rpx; }
.view-count-bar, .release-time-bar{ display: block; text-align: left; line-height: 48rpx; font-size: 26rpx; font-weight: 400; color: #909090FF; }
.release-time-bar{ padding-right: 91rpx; }
.course-feature-content{ display: block; padding: 0 33rpx; }
.content-image{ display: block; margin-bottom: 20rpx; width: 100%; }
.content-image image{ display: block; width: 100%; }
.content-text{ display: block; margin: 20rpx 0; width: 100%; text-align: justify; line-height: 50rpx; font-size: 28rpx; color: #000000FF; }