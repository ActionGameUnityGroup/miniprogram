.dialog-content{ display: block; padding: 44rpx 0 0; width: 100%; height: calc(100% - 111rpx - 44rpx); background: #f8f8f8; }
.customer-dialog-item, .user-dialog-item{ display: flex; justify-content: flex-start; align-items: flex-start; }
.customer-dialog-item{ padding: 0 86rpx 39rpx 27rpx; }
.user-dialog-item{ justify-content: flex-end; padding: 0 27rpx 39rpx 86rpx; }
.avatar-bar{ display: block; width: 64rpx; height: 64rpx; border-radius: 100rpx; overflow: hidden; }
.avatar-bar image{ display: block; width: 100%; height: 100%; background: #BFBFBFFF; }
.dialog-bar{ display: inline-block; position: relative; padding: 20rpx; max-width: 482rpx; text-align: justify; line-height: 39rpx; border-radius: 15rpx; font-size: 28rpx; word-break: break-all; }
/* .customer-dialog-item .avatar-bar{} */
.customer-dialog-item .dialog-bar{ margin-left: 32rpx; background: #fff; color: #000000FF; }
.customer-dialog-item .dialog-bar::before{ display: block; content: ''; position: absolute; top: 11px; left: -9px; border-width: 0 0 5px 9px; border-color: #fff #fff #fff transparent; border-style: solid; }
.customer-dialog-item .dialog-bar::after{ display: block; content: ''; position: absolute; top: 16px; left: -9px; border-width: 5px 0 0 9px; border-color: #fff #fff #fff transparent; border-style: solid; }
/* .user-dialog-item .avatar-bar{} */
.user-dialog-item .dialog-bar{ margin-right: 32rpx; background: #27b9f4; color: #fff; }
.user-dialog-item .dialog-bar::before{ display: block; content: ''; position: absolute; top: 11px; right: -9px; border-width: 0 9px 5px 0; border-color: #27b9f4 transparent #27b9f4 #27b9f4; border-style: solid; }
.user-dialog-item .dialog-bar::after{ display: block; content: ''; position: absolute; top: 16px; right: -9px; border-width: 5px 9px 0 0; border-color: #27b9f4 transparent #27b9f4 #27b9f4; border-style: solid; }
.topic-content{ display: flex; flex-direction: column; justify-content: flex-start; align-items: flex-start; margin-top: 14rpx; padding: 14rpx 20rpx 0; border-top: 1rpx solid #BFBFBFFF; }
.topic-item{ display: block; margin-bottom: 22rpx; line-height: 1; font-size: 26rpx; color: #436EFFFF; }
.turn-customer{ display: inline-flex; justify-content: space-between; align-items: center; align-self: flex-end; margin: 0; padding: 0; width: 122rpx; height: 38rpx; background: transparent; font-size: 28rpx; color: #436EFFFF; }
.turn-customer::before{ border: 0; }
.turn-customer::after{ border: 0; }
.turn-customer image{ display: block; width: 29rpx; height: 29rpx; }

.input-bar{ display: flex; justify-content: space-between; align-items: center; padding: 0 20rpx; height: 111rpx; background: #f6f6f6; }
.input-content{ display: block; width: 500rpx; height: 70rpx; background: #fff; }
.emoji-btn, .more-btn{ display: block; width: 56rpx; height: 56rpx; }
.emoji-btn image, .more-btn image{ display: block; width: 100%; height: 100%; }
.more-btn{ padding: 0 17rpx; }
.send-btn{ display: block; width: 90rpx; text-align: center; line-height: 56rpx; background: #09bb07; border-radius: 6rpx; color: #fff; font-size: 32rpx; }