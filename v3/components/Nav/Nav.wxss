.nav-bar{ display: flex; justify-content: space-between; align-content: center; width: 100%; height: 102rpx; background: #fff; }
.nav-bar-item{ width: calc(100% / 3); height: 104rpx; text-align: center; color: #F78800FF; }
.active{ color: #F68700FF; }
.nav-bar-item image{ display: block; margin: 10rpx auto 0; height: 48rpx; }
.nav-bar-item:nth-child(1) image{ width: 49rpx; }
.nav-bar-item:nth-child(2) image{ width: 51rpx; }
.nav-bar-item:nth-child(3) image{ width: 51rpx; }
.nav-bar-item text{ display: block; margin: 5rpx auto 0; font-size: 26rpx; }